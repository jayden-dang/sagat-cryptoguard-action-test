{
	"printWidth": 60,
	"semi": true,
	"singleQuote": true,
	"tabWidth": 2,
	"trailingComma": "all",
	"useTabs": true,
	"overrides": [
		{
			"files": [
				"sdk/**/*.ts",
				"api/**/*.ts",
				"app/**/*.tsx",
				"app/**/*.ts"
			],
			"options": {
				"plugins": ["@ianvs/prettier-plugin-sort-imports"],
				"importOrder": [
					"<BUILT_IN_MODULES>",
					"<THIRD_PARTY_MODULES>",
					"",
					"^@/(.*)$",
					"^~/(.*)$",
					"",
					"^[.]"
				]
			}
		}
	]
}
