		"dataloader": "^2.2.3",
		"drizzle-orm": "^0.44.5",
		"hono": "^4.9.8",
		"jose": "^6.1.0",
		"pg": "^8.11.0",
		"prom-client": "^15.1.3"
	},
	"devDependencies": {
		"@types/bun": "latest",
		"@types/pg": "^8.11.0",
		"drizzle-kit": "^0.31.4",
		"prettier": "^3.6.2"
	}
}
